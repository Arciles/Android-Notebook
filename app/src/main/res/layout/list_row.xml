<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F9F9"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listItemNoteImg"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="15dp"
        android:src="@mipmap/ic_action_label_outline"
        android:contentDescription="List Item Icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No Title"
        android:id="@+id/listItemNoteTitle"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_alignTop="@+id/listItemNoteImg"
        android:layout_toEndOf="@+id/listItemNoteImg"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is goung to be a very very long title"
        android:id="@+id/listItemNoteText"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/listItemNoteTitle"
        android:layout_toEndOf="@+id/listItemNoteImg" />

</RelativeLayout>
